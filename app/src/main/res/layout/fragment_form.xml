<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Model.FormFragment">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingresa tu información"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:textSize="18dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:text="Siguiente"
        android:textColor="@color/white"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#7C2FFA"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre"
        app:helperText="Nombre y Apellido(s)"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"

            />
    </com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/etEmail"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/etNombre"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:hint="Correo electronico"
    app:helperText="Cualquier dominio"
    app:layout_constraintEnd_toEndOf="parent"
    app:endIconMode="clear_text"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
    app:startIconDrawable="@drawable/ic_email"
    android:padding="10dp"
    >
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        />
</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etNumeroCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Numero de cuenta"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        app:helperText="9 Digitos"
        app:startIconDrawable="@drawable/ic_student"
        app:counterEnabled="true"
        app:counterMaxLength="9"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/SpinnerCarreras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etNumeroCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Selecciona tu Ingenieria"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        app:startIconDrawable="@drawable/ic_ingenieria"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:endIconMode="dropdown_menu"
        >
       <AutoCompleteTextView
           android:id="@+id/DropCarreras"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:inputType="none"
           />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordLayoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0"


        >

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnCalendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:icon="@drawable/ic_calendar"
            app:iconTint="@color/white"
            android:backgroundTint="#7C2FFA"
            android:text="Ingresar"
            android:textColor="@color/white"
            android:contentDescription="@string/app_name"
            android:textSize="15dp"
            app:backgroundTint="#FFFFFF"


            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/tvFechaNacimiento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingresa tu fecha de nacimento"
        android:layout_marginStart="30dp"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/coordLayoutButton"
        app:layout_constraintTop_toBottomOf="@+id/SpinnerCarreras"
        android:textSize="18dp"

        />

        <TextView
            android:id="@+id/tvDia"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/guionMedio"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/coordLayoutButton"
            app:layout_constraintEnd_toStartOf="@+id/tvMes"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaNacimiento"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.15"
            android:padding="10dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            />

        <TextView
            android:id="@+id/tvMes"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/guionMedio"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/tvDia"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaNacimiento"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvAño"
            app:layout_constraintVertical_bias="0.15"
            />
        <TextView
            android:id="@+id/tvAño"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/guionMedio"
            android:padding="10dp"
            android:layout_marginEnd="30dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/tvMes"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaNacimiento"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Día"
        app:layout_constraintStart_toEndOf="@id/coordLayoutButton"
        app:layout_constraintEnd_toStartOf="@+id/tvMes"
        app:layout_constraintTop_toBottomOf="@+id/tvDia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:padding="10dp"

        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Mes"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/tvDia"
        app:layout_constraintTop_toBottomOf="@+id/tvMes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvAño"
        app:layout_constraintVertical_bias="0"
        />
    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Año"
        android:padding="10dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintStart_toEndOf="@+id/tvMes"
        app:layout_constraintTop_toBottomOf="@+id/tvAño"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>